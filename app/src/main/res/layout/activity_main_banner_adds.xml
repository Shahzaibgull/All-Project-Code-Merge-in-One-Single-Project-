<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Instagram.MainActivity">

    <!-- on below line creating a text view for heading of application-->
    <Button
        android:id="@+id/showinterstitialadsBtn"
        android:layout_centerInParent="true"
        android:text="show interstitial ads"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/showNativeAdsBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/showinterstitialadsBtn"
        android:text="show medium size native ads" />

    <Button
        android:id="@+id/rewardedAdsBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/showNativeAdsBtn"
        android:text="Rewarded Ads"/>

    <TextView
        android:id="@+id/totalRATxt"
        android:layout_marginTop="8dp"
        android:layout_below="@id/rewardedAdsBtn"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Rewarded Amount"/>

    <FrameLayout
        android:id="@+id/adsFrameLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="731dp" />


</RelativeLayout>